{
  "name": "react-construct",
  "version": "0.0.9",
  "description": "A cli based useful package for react app to create components and other files.",
  "main": "./lib/react-construct.js",
  "bin": {
    "react-construct": "bin/index.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "publishNext": "npm publish --access=public next",
    "publishBeta": "npm publish --access=public --tag beta",
    "publishLatest": "npm publish --access=public --tag latest"
  },
  "author": "Gaurav Kumar (https://github.com/marshall-GK)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marshall-GK/react-construct.git"
  },
  "keywords": [
    "cli",
    "react",
    "functional components",
    "hooks",
    "components",
    "create",
    "files",
    "terminal"
  ],
  "license": "MIT",
  "dependencies": {
    "chalk": "4.1.2",
    "easy-table": "1.2.0",
    "fs-extra": "10.0.0",
    "inquirer": "6.2.0",
    "replace": "1.2.1"
  },
  "bugs": {
    "url": "https://github.com/marshall-GK/react-construct/issues"
  },
  "homepage": "https://github.com/marshall-GK/react-construct#readme",
  "directories": {
    "lib": "lib"
  },
  "devDependencies": {
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ],
    "env": {
      "commonjs": true,
      "es2021": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {}
  }
}
